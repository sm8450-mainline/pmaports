	postmarketos-base-ui-qt-wayland
	postmarketos-base-ui-tinydm
	postmarketos-base-ui-wifi
	repowerd
	sensorfw
	superd
	tinydm
	wireplumber
	xwayland
"
_pmb_recommends="
	ayatana-indicator-messages
	ayatana-indicator-sound
	deviceinfo-converter
	font-droid-nonlatin
	font-noto
	font-noto-extra
	font-noto-emoji
	lomiri-calculator-app
	lomiri-docviewer-app
