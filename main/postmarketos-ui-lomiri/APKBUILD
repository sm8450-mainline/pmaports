arch="noarch !armhf !riscv64"
license="GPL-3.0-or-later"
depends="
	bluez
	hfd-service
	lomiri
	lomiri-indicator-location
	lomiri-location-service
	lomiri-notifications
	lomiri-system-settings
	networkmanager
