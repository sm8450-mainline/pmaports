# Reference: https://postmarketos.org/uipkg
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=postmarketos-base-ui-plasma
pkgver=2
pkgrel=12
pkgdesc="Meta package for shared configuration for Plasma-based UIs"
url="https://postmarketos.org"
arch="noarch !armhf" # armhf is not supported
license="GPL-3.0-or-later"
depends="
	bluedevil
	breeze
	dnsmasq
	iio-sensor-proxy
	kunifiedpush
	kscreen
	kwallet-pam
	kwayland-integration
	modemmanager
	polkit-kde-agent-1
	postmarketos-base-ui
	postmarketos-base-ui-audio
	postmarketos-base-ui-networkmanager
	powerdevil
	urfkill
	xdg-desktop-portal-kde
	"
# Required to launch
depends="$depends
	xorg-server
	"
_pmb_recommends="
	breeze-gtk
	discover
	flatpak
	kaccounts-providers
	kde-gtk-config
	maliit-keyboard
	postmarketos-artwork-wallpapers
	snapshot
	xdg-user-dirs
	"
subpackages="$pkgname-openrc"
source="
	gtk-app-wayland.sh
	kdewallet.kwl
	kdewallet.salt
	qtlogging.ini
	"
options="!check pmb:gpu-accel"

package() {
	install -Dm644 \
		"$srcdir"/qtlogging.ini \
		-t "$pkgdir"/etc/xdg/QtProject/

	install -Dm755 \
		"$srcdir"/gtk-app-wayland.sh \
		-t "$pkgdir"/etc/profile.d/

	# TODO: remove once keyboard input bug is fixed
	# https://bugs.kde.org/show_bug.cgi?id=435183
	install -Dm600 -t "$pkgdir"/etc/skel/.local/share/kwalletd \
		"$srcdir"/kdewallet.kwl \
		"$srcdir"/kdewallet.salt
}

openrc() {
	install_if="$pkgname=$pkgver-r$pkgrel openrc"
	install="$subpkgname.post-install $subpkgname.post-upgrade"
	depends="
		bluez-openrc
		elogind
		elogind-openrc
		iio-sensor-proxy-openrc
		networkmanager-openrc
		urfkill-openrc
		"

	mkdir -p "$subpkgdir"
}

