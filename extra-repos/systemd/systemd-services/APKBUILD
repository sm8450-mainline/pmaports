flatpath() {
	local i
	for i in $@; do
		echo "$i" | sed s./.-.g
	done
}

# 4. Add the _sources variable to the list below
source="$(flatpath \
	$_apk_polkit_rs_sources \
	$_at_spi2_core_sources \
	$_bluez_sources \
	$_dconf_sources \
	$_eg25_manager_sources \
