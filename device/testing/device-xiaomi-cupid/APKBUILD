# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-xiaomi-cupid
pkgdesc="Xiaomi 12"
pkgver=1
pkgrel=13
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	firmware-xiaomi-cupid-adsp
	firmware-xiaomi-cupid-cdsp
	firmware-xiaomi-cupid-gpu
	firmware-xiaomi-cupid-initramfs
	firmware-xiaomi-cupid-ipa
	firmware-xiaomi-cupid-modem
	firmware-xiaomi-cupid-slpi
	linux-firmware-ath11k
	linux-firmware-qca
	linux-firmware-qcom
	linux-postmarketos-qcom-sm8450
	make-dynpart-mappings
	mkbootimg
	msm-modem
	msm-modem-uim-selection
	postmarketos-base
	qbootctl
	tqftpserv
"
makedepends="
	devicepkg-dev
"
source="
	deviceinfo
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

openrc() {
	install_if="$pkgname=$pkgver-r$pkgrel openrc"
	install="$subpkgname.post-install"
	depends="qbootctl-openrc tqftpserv-openrc"

	mkdir -p "$subpkgdir"
}

